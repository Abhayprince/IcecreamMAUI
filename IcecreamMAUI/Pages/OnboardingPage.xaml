<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="IcecreamMAUI.Pages.OnboardingPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Shell.NavBarIsVisible="False">

    <Grid Padding="0,0,0,40" RowDefinitions="*, Auto">
        <VerticalStackLayout
            Grid.Row="0"
            HorizontalOptions="Center"
            Spacing="20"
            VerticalOptions="Center">
            <Image
                Aspect="AspectFit"
                HeightRequest="250"
                Source="ice_cream"
                WidthRequest="250" />
            <Label
                FontAttributes="Bold"
                FontSize="20"
                HorizontalOptions="Center"
                Text="Welcome" />
            <Label
                FontAttributes="Bold"
                FontSize="25"
                HorizontalOptions="Center"
                Text="MAUI ICE CREAMS" />
            <Label
                FontSize="18"
                HorizontalOptions="Center"
                Text="Home of Delicious Ice Creams" />
        </VerticalStackLayout>
        <VerticalStackLayout
            Grid.Row="1"
            HorizontalOptions="Center"
            Spacing="20">
            <Button Clicked="Signup_Clicked" Text="Signup" />
            <Button Clicked="Signin_Clicked" Text="Signin" />
        </VerticalStackLayout>
    </Grid>

</ContentPage>